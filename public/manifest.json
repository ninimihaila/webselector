{
  "manifest_version": 2,

  "name": "Web Selector",
  "description": "This extension helps selecting elements from a page",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "selector-popup.html",
    "default_title": "Start web selector"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/selector-content-script.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
